From cedabd6d5e6956992f2c4e9afc63ef4be4e2265f Mon Sep 17 00:00:00 2001
From: Jari Aalto <jari.aalto@cante.net>
Date: Sun, 29 Jan 2012 17:45:11 +0200
Subject: [PATCH] Documentation/Makefile: Run xmlto with --skip-validation
Organization: Private
Content-Type: text/plain; charset="utf-8"
Content-Transfer-Encoding: 8bit

Signed-off-by: Jari Aalto <jari.aalto@cante.net>
---
 Documentation/Makefile |    3 ++-
 1 files changed, 2 insertions(+), 1 deletions(-)

diff --git a/Documentation/Makefile b/Documentation/Makefile
index 9fc1165..b3930bb 100644
--- a/Documentation/Makefile
+++ b/Documentation/Makefile
@@ -21,6 +21,7 @@
 ASCIIDOC_EXTRA =
 INSTALL?=install
 DOC_REF = origin/man
+XMLTO_EXTRA = --skip-validation
 
 all: html man
 
@@ -71,7 +72,7 @@
 	$(ASCIIDOC) -b xhtml11 -d manpage -f asciidoc.conf $(ASCIIDOC_EXTRA) $<
 
 %.1 %.7 : %.xml
-	xmlto -m callouts.xsl man $<
+	xmlto -m callouts.xsl $(XMLTO_EXTRA) man $<
 
 %.xml : %.txt footer.txt version.txt
 	$(ASCIIDOC) -b docbook -a version=$(VERSION) -d manpage -f asciidoc.conf $<
